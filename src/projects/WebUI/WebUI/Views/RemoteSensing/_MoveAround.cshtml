<div layout="row" ng-if="metadata.images">
    <button ng-if="canUp()" style="height:30px;width:30px">
        <i class="fa fa-arrow-up" aria-hidden="true" style="color:green" ng-click="moveUp()"></i>
    </button>

    <button ng-if="canDown()" style="height:30px;width:30px">
        <i class="fa fa-arrow-down" aria-hidden="true" style="color:green" ng-click="moveDown()"></i>
    </button>

    <button ng-if="canLeft()" style="height:30px;width:30px">
        <i class="fa fa-arrow-left" aria-hidden="true" style="color:green" ng-click="moveLeft()"></i>
    </button>

    <button ng-if="canRight()" style="height:30px;width:30px">
        <i class="fa fa-arrow-right" aria-hidden="true" style="color:green" ng-click="moveRight()"></i>
    </button>

    <md-input-container>
        <label>Tag</label>
        <md-select name="selection.tag" ng-model="selection.tag" ng-change="showImage()">
            <md-option ng-value="k" ng-repeat="(k,v) in current.operation">{{v}}</md-option>
        </md-select>
    </md-input-container>


</div>

