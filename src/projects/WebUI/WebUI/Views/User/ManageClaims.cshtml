@model WebUI.ViewModels.UserClaimViewModel

@{
    ViewBag.Title = "编辑用户的Account";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <thead class="thead-dark">
    <tr>
        <th scope="col">Account名称</th>
        <th scope="col">操作</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var claim in Model.claims)
    {
        <tr>
            <td scope="row">@claim.Name</td>
            <td>
                <form asp-action="RemoveClaim" asp-route-accountId="@claim.GUid" asp-route-id="@Model.user_id" method="post" style="white-space: nowrap;">
                    <a asp-controller="Account" asp-action="ManageAccount" asp-route-id="@claim.GUid" class="btn btn-primary">管理Account</a>
                    <button type="submit" class="btn btn-danger"
                            onclick="return confirm('确认删除？')">
                        删除
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
<a asp-action="AddClaimToUser" asp-route-id="@Model.user_id" class="btn btn-primary">为用户添加Account</a>
<a asp-action="Index" class="btn btn-secondary">返回用户列表</a>
