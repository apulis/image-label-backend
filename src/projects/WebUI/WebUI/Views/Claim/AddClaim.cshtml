@model WebUI.ViewModels.AddClaimViewModel

@{
    ViewBag.Title = "添加Claim";
}

<h2>@ViewBag.Title</h2>

<form method="post">
    <div class="form-group row">
        <label asp-for="ClaimName" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ClaimName">
            <span class="invalid" asp-validation-for="ClaimName"></span>
        </div>
    </div>

    <div class="invalid" asp-validation-summary="ModelOnly">
    </div>

    <button type="submit" class="btn btn-primary">提交</button>
    <a asp-action="Index"  class="btn btn-secondary">返回列表</a>
</form>